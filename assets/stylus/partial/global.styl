
@font-face 
  font-family: 'lato-regular'
  src: url("/assets/lato-font/Lato-Regular.ttf") format("truetype")
  font-weight: normal
  font-style: normal

@font-face 
  font-family: 'lato-semibold'
  src: url("/assets/lato-font/Lato-Semibold.ttf") format("truetype")
  font-weight: normal
  font-style: normal

@font-face 
  font-family: 'lato-light'
  src: url("/assets/lato-font/Lato-Light.ttf") format("truetype")
  font-weight: normal
  font-style: normal


*,
*:before,
*:after 
  margin: 0
  padding: 0
  box-sizing: border-box



.big-wrapper 
  position: relative
  display: flex
  flex-direction: column
  height: 100vh
  font-family: "lato-regular"

.banner-image
  z-index: -1
  position: fixed
  left: 0
  top: 0
  background-color: #e1e5e8
  background-image: url("/assets/images/cover.jpg")
  background-size: cover
  width: 100vw
  height: 100vh


h4 
  font-weight: medium


a 
  color: #333
  text-decoration: none


b 
  font-family: "lato-semibold"


.flex
  display: flex

  &.--center
    text-align: center

    &-items
      align-items: center


.space
  margin: sp

  &-sm
    margin: sp-sm
  
  &-mm
    margin: sp-mm
  
  &-x
    margin-left: sp
    margin-right: sp

    &-sm
      margin-left: sp-sm
      margin-right: sp-sm

    &-mm
      margin-left: sp-mm
      margin-right: sp-mm

  &-y
    margin-top: sp
    margin-bottom: sp

    &-sm
      margin-top: sp-sm
      margin-bottom: sp-sm

    &-mm
      margin-top: sp-mm
      margin-bottom: sp-mm

  &-top
    margin-top: sp

    &-sm
      margin-top: sp-sm

    &-mm
      margin-top: sp-mm

  &-bottom
    margin-bottom: sp

    &-sm
      margin-bottom: sp-sm

    &-mm
      margin-bottom: sp-mm
  
  &-left
    margin-left: sp

    &-sm
      margin-left: sp-sm

    &-mm
      margin-left: sp-mm
  
  &-right
    margin-right: sp

    &-sm
      margin-right: sp-sm

    &-mm
      margin-right: sp-mm
